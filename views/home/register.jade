.landing
  form(layout="column", layout-align="center center", layout-fill ng-submit="signup()")
    div(class="loginBox md-whiteframe-z1", layout="column")
      md-toolbar.md-warn
        h2(class="md-toolbar-tools")
          span Register
      md-content(class="md-padding", layout="column")
        md-input-container
          label Name
          input(type="text" ng-model="register.nname" required)
        md-input-container
          label Email
          input(type="text" ng-model="register.email" required)
        md-input-container
          label Username
          input(type="text" ng-model="register.username" required)
        md-input-container
          label Password
          input(type="password" ng-model="register.password" required)
        md-input-container
          label Address
          input(type="text" ng-model="register.address" required)
        md-input-container
          label Phone
          input(type="text" ng-model="register.phone" required)
        div(layout="row" layout-align="center center" style="padding-top:20px;")
          md-button(class="md-raised md-warn" type="submit") Register
