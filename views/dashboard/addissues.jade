div(layout='column', layout-padding='', ng-cloak='')
  form(ng-submit="addProjectIssues()")
    md-content.md-no-momentum
      md-input-container.md-icon-float.md-block
        // Use floating label instead of placeholder
        label Issue Name
        input(type='text' ng-model="issue.name")
      md-input-container.md-block(md-no-float='')
        textarea(ng-model='issue.descriptions' placeholder='Describe the Issue' rows="8")
      .col-md-6
        md-select(ng-model="issue.projectId" placeholder="Project Name")
          md-option(ng-repeat="project in projects" ng-value="project.id")
            {{project.name}}     
      .col-md-6
        md-select(ng-model="issue.userId" placeholder="Assign To")
          md-option(ng-repeat="user in users" ng-value="user.id")
            {{user.username}}
    md-button.md-raised.md-warn(type="submit" value="submit") Submit    
