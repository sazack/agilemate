.row
  .col-sm-4.col-sm-offset-5
    .card.card-warning.text-xs-center.z-depth-2
      .card-block(ui-sref="Dashboard.sprintList.add")
        p.white-text Add New Tasks

.detail-box
  .container(ng-repeat="task in taskInfo")
    div(layout='column', ng-cloak='')
      md-toolbar.md-warn
        .md-toolbar-tools(layout-align="center center")
          h2.md-flex {{task.name}}
      md-content(flex='', layout-padding='')
        p
          {{task.description}}
        //- .col-sm-6
        md-content
          span.md-headline Created At
            {{task.createdAt | date:'yyyy-MM-dd'}}
        //- .col-sm-6
        md-content
          span Assigned To :
            h6 {{task.user.username}}
            h6 {{task.user.email}}
